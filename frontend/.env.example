# Multilingual Mandi Frontend Environment Variables (Frontend-Only)
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_NAME=Multilingual Mandi
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true

# Storage Configuration (LocalStorage)
NEXT_PUBLIC_STORAGE_VERSION=1.0.0
NEXT_PUBLIC_MAX_STORAGE_SIZE=5242880

# Default Settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DEFAULT_CURRENCY=INR
NEXT_PUBLIC_DEFAULT_LOCATION=India

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_MOBILE_BREAKPOINT=768
NEXT_PUBLIC_TOUCH_TARGET_SIZE=44

# Server-side Environment Variables (NOT exposed to browser)
# Add these to your Vercel environment variables dashboard
# GEMINI_API_KEY=your_gemini_api_key_here