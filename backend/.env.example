# Multilingual Mandi Backend Environment Variables
# Copy this file to .env and fill in your values

# IMPORTANT: Install dependencies first:
# pip install -r requirements.txt
# or run: python start.py

# App Information
APP_NAME=Multilingual Mandi API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (REQUIRED)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_RATE_LIMITING=true

# Input Validation
MAX_INPUT_LENGTH=1000
MAX_TRANSLATION_LENGTH=500
MAX_NEGOTIATION_HISTORY=10

# AI Services Configuration (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# Service Configuration
TRANSLATION_SERVICE=gemini
TRANSLATION_CACHE_TTL=3600

PRICE_DISCOVERY_SERVICE=gemini
PRICE_CACHE_TTL=1800

NEGOTIATION_SERVICE=gemini
NEGOTIATION_MAX_SUGGESTIONS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration (REQUIRED)
SECRET_KEY=your-super-secret-key-change-in-production-must-be-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Database Configuration
DATABASE_URL=sqlite:///./multilingual_mandi.db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=false
ENABLE_SWAGGER_UI=true